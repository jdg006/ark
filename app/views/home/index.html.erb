        <h3>Loadout</h3>
        <p>This will be the loadout section</p>
        <% @choices.each do |choice|%>
        <% item = @items.where("id = #{choice.item_id}").first%>
        <p><%= item.name %>, <%= choice.quantity%>, <%= choice.quality %></p>
        
        <% end %>
    </div>
    <div class= "col-md-8">
        <h3>Items</h3>
        <% @items.each do |item| %>
